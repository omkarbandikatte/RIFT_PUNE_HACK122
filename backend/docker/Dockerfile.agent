FROM python:3.11-slim

# Set working directory
WORKDIR /workspace

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install pytest and common testing tools
RUN pip install --no-cache-dir \
    pytest==7.4.3 \
    pytest-cov \
    pytest-xdist \
    pytest-asyncio

# Set Python to unbuffered mode for real-time output
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1

# Security: Run as non-root user
RUN useradd -m -u 1000 agent && \
    chown -R agent:agent /workspace

USER agent

# Copy the entrypoint script
COPY --chown=agent:agent docker/agent_entrypoint.py /usr/local/bin/agent_entrypoint.py

# Set entrypoint
ENTRYPOINT ["python", "/usr/local/bin/agent_entrypoint.py"]
